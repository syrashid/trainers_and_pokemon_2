<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1>Add new tag for <%= @pokemon.name %></h1>

      <%= simple_form_for [ @pokemon, @pokemon_move ] do |f| %>
        <%= f.input :move, collection: Move.all, input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>
        <%= f.submit "Add tag", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
